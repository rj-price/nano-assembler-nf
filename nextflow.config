/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nano-assembler-nf Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    // Input/Output options
    reads_dir          = "${launchDir}/data"
    outdir             = "${launchDir}/output"
    prefix             = "assembly"
    genome_size        = null
    
    // Filtlong Parameters
    min_length         = 1000
    min_mean_q         = 90

    // NECAT Parameters
    coverage           = 80

    // Medaka Parameters
    model              = "r1041_e82_400bps_sup_g615"

    // BUSCO Parameters
    lineage            = "fungi_odb10"

    // Kraken2 Parameters
    kraken2_db         = "/mnt/apps/users/jnprice/databases/k2_pluspf_16gb_20240112"

    // BLAST Parameters
    mito_db            = "/mnt/apps/users/jnprice/databases/organelle_blast_db"

    // MultiQC options
    multiqc_config     = null
    
    // Max resource options
    // Defaults only, expected to be overwritten
    max_memory         = '128.GB'
    max_cpus           = 16
    max_time           = '240.h'
}

// Global process config
process {
    cpus   = { check_max( 1    * task.attempt, 'cpus'   ) }
    memory = { check_max( 4.GB * task.attempt, 'memory' ) }
    time   = { check_max( 4.h  * task.attempt, 'time'   ) }

    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resource requirements
    withName: BUSCO {
        cpus   = { check_max( 8 * task.attempt, 'cpus' ) }
        memory = { check_max( 3.GB * task.attempt, 'memory' ) }
    }
    withName: FILTLONG {
        cpus   = { check_max( 2 * task.attempt, 'cpus' ) }
        memory = { check_max( 10.GB * task.attempt, 'memory' ) }
    }
    withName: JELLYFISH {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 20.GB * task.attempt, 'memory' ) }
    }
    withName: KRAKEN2 {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 18.GB * task.attempt, 'memory' ) }
    }
    withName: MEDAKA {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 40.GB * task.attempt, 'memory' ) }
    }
    withName: MERQURY {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 16.GB * task.attempt, 'memory' ) }
    }
    withName: NECAT {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 40.GB * task.attempt, 'memory' ) }
    }
    withName: PORECHOP {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 30.GB * task.attempt, 'memory' ) }
    }
    withName: RACON {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 40.GB * task.attempt, 'memory' ) }
    }
    withName: TAPESTRY {
        cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
        memory = { check_max( 8.GB * task.attempt, 'memory' ) }
    }
}

profiles {
    debug { process.beforeScript = 'echo $HOSTNAME' }
    conda {
        conda.enabled          = true
        docker.enabled         = false
        singularity.enabled    = false
    }
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
    }
    slurm {
        process.executor       = 'slurm'
        process.queue          = { task.memory <= 10.GB ? 'short' : (task.memory <= 40.GB ? 'medium' : 'long') }
    }
}

// Export these variables to prevent local Python/R libraries from conflicting with those in the container
env {
    PYTHONNOUSERSITE = 1
    R_PROFILE_USER   = "/.Rprofile"
    R_ENVIRON_USER   = "/.Renviron"
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

manifest {
    name            = 'nano-assembler-nf'
    author          = 'Jordan Price'
    homePage        = 'https://github.com/jnprice/nano-assembler-nf'
    description     = 'Nextflow pipeline for Oxford Nanopore assembly and QC'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=21.10.3'
    version         = '0.1.0'
}

// Function to ensure that resource requirements don't exceed
// a maximum limit
def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   --- ERROR = Max memory '${params.max_memory}' is not valid! Using default value: ${obj}"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   --- ERROR = Max cpus '${params.max_cpus}' is not valid! Using default value: ${obj}"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   --- ERROR = Max time '${params.max_time}' is not valid! Using default value: ${obj}"
            return obj
        }
    }
}
